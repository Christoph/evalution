<UserControl x:Class="Presentation.AnswerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="Auto" Width="Auto">
    <GroupBox>
		<GroupBox.Header>
			<Label FontSize="16" FontWeight="Bold">Answers</Label>
		</GroupBox.Header>
		<ScrollViewer x:Name="ScrollViewer" >
            <TabControl Background="Transparent" x:Name="Stack" PreviewMouseWheel="Stack_PreviewMouseWheel">
                <TabItem Header="First Question Set" FontSize="12" FontWeight="Bold">
                    <StackPanel x:Name="Pre">
                        
                    </StackPanel>
                </TabItem>
                <TabItem Header="Second Question Set" FontSize="12" FontWeight="Bold">
                    <StackPanel x:Name="During">
 
                    </StackPanel>
                </TabItem>
                <TabItem Header="Third Question Set" FontSize="12" FontWeight="Bold">
                    <StackPanel x:Name="Past">
                        
                    </StackPanel>
                </TabItem>
            </TabControl>
        </ScrollViewer>
	</GroupBox>
</UserControl>
