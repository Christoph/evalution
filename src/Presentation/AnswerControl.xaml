<UserControl x:Class="Presentation.AnswerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="Auto" Width="Auto">
    <GroupBox>
		<GroupBox.Header>
			<Label FontSize="16" FontWeight="Bold">Answers</Label>
		</GroupBox.Header>
		<ScrollViewer x:Name="ScrollViewer" >
			<StackPanel Background="Transparent" x:Name="Stack" PreviewMouseWheel="Stack_PreviewMouseWheel">
				<StackPanel x:Name="Pre">
					<Label Content="First Question Set" FontSize="12" FontWeight="Bold"/>
				</StackPanel>
				<StackPanel x:Name="During">
					<Label Content="Second Question Set" FontSize="12" FontWeight="Bold"/>
				</StackPanel>
				<StackPanel x:Name="Past">
					<Label Content="Third Question Set" FontSize="12" FontWeight="Bold"/>
				</StackPanel>
			</StackPanel>
		</ScrollViewer>
	</GroupBox>
</UserControl>
